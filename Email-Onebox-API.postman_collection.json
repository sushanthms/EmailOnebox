        {
          "name": "Add Gmail Account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"your-email@gmail.com\",\n  \"imap\": {\n    \"host\": \"imap.gmail.com\",\n    \"port\": 993,\n    \"secure\": true,\n    \"user\": \"your-email@gmail.com\",\n    \"password\": \"your-app-password\"\n  }\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/accounts",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "accounts"]
            }
          }
        },
